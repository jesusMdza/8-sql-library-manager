extends layout

block title
  title #{headTitle}

block content
  form(method='post' action=`/books/${book.id}`)
    div.heading
      h1 #{title}
      div.button-container
        div.multi-button-container
          input.update(type='submit' value='Update Book')
          a.button.cancel(href='/books/page=1') Cancel
          a.button.delete(href=`/books/${book.id}/delete`) Delete Book
    div.field-container
      h2
        label(for='title') Title
        input#title(name='title' type='text' value= book.title)
      h2
        label(for='author') Author
        input#author(name='author' type='text' value= book.author)
      h2
        label(for='genre') Genre
        input#genre(name='genre' type='text' value= book.genre)
      h2
        label(for='year') Year
        input#year(name='year' type='text' value= book.year)